    {%- endunless -%}

    .section-block-{{section.id}} .halo-block-header .title {color: {{ color_title }};font-size: {{ fontsize_title | append: 'px'  }};line-height: 1.3;}
    .section-block-{{section.id}} .halo-block-header > .title { margin-bottom: {{ mg_bottom_title | append: 'px' }}}
    .section-block-{{section.id}} .halo-block-header .rte {color: {{ section.settings.color_des }};font-size: {{ section.settings.fontsize_des | append: 'px'  }};margin-bottom: {{ section.settings.mg_bottom_des | append: 'px' }}}

    {%- if section.settings.view_all != blank -%}
        .section-block-{{section.id}} .view_all {
            display: flex;
            column-gap: {{ section.settings.spacing_view_all_icon }}px;
            font-weight: var(--font-weight-view-all-style);
            margin-bottom: var(--mg-bottom-view-style);
            color: var(--color-view-all-style);
            font-size: var(--font-size-view-all-style);
            border-bottom: none;
            line-height: 1.5;
            max-width: 80px;
        }
        {%- if section.settings.icon_view_all != blank -%}
