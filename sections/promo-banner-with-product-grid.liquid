                                    {%- endif -%}
                                    {{ section.settings.view_all }}
                                    {%- if section.settings.icon_view_all -%}
                                        <span class="icon-svg" {% if section.settings.view_all_icon_side =='left' %} style="display: none;" {% endif %}>{{ section.settings.icon_view_all }}</span>
                                    {%- endif -%}
                                </a>
                            {%- endif -%}
                        </div>
                    {% else %}
                        <h3 class="title{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"><span class="text">{{ section.settings.section_title }}</span></h3>
                    {%- endif -%}
                    {%- unless section.settings.title_align == 'center' or section.settings.title_align == 'right' or section.settings.title_align == 'left' -%}
                        {%- if section.settings.view_all != blank -%}
                            {% if settings.banner_animation == 'effect_fade_up' %}
                            <div class="scroll-trigger animate--slide-in">
                            {% endif %}
                                <a class="view_all{% if section.settings.title_align == 'left' %} ml-30{% endif %}{% if section.settings.enable_border_view_all %} view_all--border{% endif %}"{% if section.settings.link_view_all == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.link_view_all }}"{% endif %} title="{{section.settings.view_all}}" style="--font-weight-view-all-style: {{ section.settings.font_weight_view_all }};--mg-bottom-view-style: {{ section.settings.mg_bottom_view | append: 'px' }};--color-view-all-style: {{ section.settings.color_view_all }};--color-view-all-icon-style: {{ section.settings.color_view_all_icon }};--font-size-view-all-style: {{ section.settings.view_all_fs | append: 'px' }}">
                                    {%- if section.settings.icon_view_all -%}
                                    <span class="icon-svg"{% if section.settings.view_all_icon_side =='right' %} style="display: none;"{% endif %}>{{ section.settings.icon_view_all }}</span>
                                    {%- endif -%}
                                    {{ section.settings.view_all }}
                                    {%- if section.settings.icon_view_all -%}
                                        <span class="icon-svg" {% if section.settings.view_all_icon_side =='left' %} style="display: none;" {% endif %}>{{ section.settings.icon_view_all }}</span>
                                    {%- endif -%}
                                </a>
                            {% if settings.banner_animation == 'effect_fade_up' %}
                            </div>
                            {% endif %}
                        {%- endif -%}
                    {%- endunless -%}
            </div>
        {%- endif -%}
        <div class="promo-banner-with-product-grid-block{% if section.settings.enable_border %} has-border{% endif %}" style="--fontsize_product_title: {{ fontsize_product_title }}px;--fontsize_product_title_mb: {{ fontsize_product_title_mb }}px;--product_title_color: {{ product_title_color }};--fontsize_product_price: {{ fontsize_product_price }}px;--fontsize_product_price_mb: {{ fontsize_product_price_mb }}px;--product_price_color: {{ product_price_color }};--product_price_bg_color: {{ product_price_bg_color }};--product_price_color_hover: {{ product_price_color_hover }};--product_price_bg_color_hover: {{ product_price_bg_color_hover }};--border_color: {{ border_color }};">
