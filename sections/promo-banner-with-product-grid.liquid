    {%- else -%}
        .section-block-{{ section.id }} {background: {% if section.settings.section_bg_gradient != blank %}{{ section.settings.section_bg_gradient }}{% else %}{{ section.settings.section_bg }}{% endif %};}
    {%- endif -%}
    .section-block-{{section.id}} .halo-block-header .title .text {
        background: {% if section.settings.section_bg_gradient != blank %}{{ section.settings.section_bg_gradient }}{% elsif section.settings.section_bg == 'rgba(0,0,0,0)' %}var(--color-background,#fff){% else %}{{ section.settings.section_bg }}{% endif %}}
