                </a>
            </div>
            {% if products != blank %}
                {%- for product in products -%}
                <div class="item{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if settings.banner_animation == 'effect_fade_up' %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                    {% render 'product-card-grid',
                        product_card_product: product,
                        serial: forloop.index,
                        sectionId: section.id,
                        show_list: true,
                        loading: true,
                        image_ratio: image_ratio,
                        portrait_height: portrait_height
                    %}
                </div>
                {%- endfor -%}
            {% else %}
                {%- for product in (1..6) -%}
                    <div class="item{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if settings.banner_animation == 'effect_fade_up' %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                        <div class="product{% if swipe %} slider__slide grid__item{% endif %}">
                            {% render 'product-card-grid-placeholder', index: 2 %}
                        </div>
                    </div>
                {%- endfor -%}
            {% endif %}
        </div>
    </div>
