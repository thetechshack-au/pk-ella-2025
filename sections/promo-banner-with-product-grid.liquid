            .section-block-{{section.id}} .halo-block-header .title:before {background: {{ section.settings.color_title }}}
        {%- else -%}
            .section-block-{{section.id}} .halo-block-header .title {background: transparent} .section-block-{{section.id}} .halo-block-header .title:before {display: none}
        {%- endif -%}
    {%- endif -%}

    {%- if section.settings.title_align == 'center' -%}
        .section-block-{{section.id}} .halo-block-header .view_all {position: absolute;top: 50%;transform: translateY(-50%);left: 0}
    {%- endif -%}
    {%- if section.settings.title_align == 'right' -%}
        .section-block-{{section.id}} .halo-block-header .view_all {position: absolute;top: 50%;transform: translateY(-50%);right: 0}
    {%- endif -%}
