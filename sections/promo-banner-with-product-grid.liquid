        {%- endif -%}
        {%- if section.settings.title_align == 'left' or section.settings.title_align == 'left_right' -%}
            .section-block-{{section.id}} .halo-block-header .title .text { width: auto}
            {%- if section.settings.enable_border_title -%}
                .section-block-{{section.id}} .halo-block-header {border-bottom: 1px solid {{ section.settings.border_color_title }};width: 100%;margin-bottom: {{ section.settings.mg_bottom_title | plus: 5 | append: 'px' }}}
            {%- else -%}
                .section-block-{{section.id}} .halo-block-header{margin-bottom: 0}
            {%- endif -%}
        {%- endif -%}
        {%- if section.settings.container == 'fullwidth' -%}
            .section-block-{{section.id}} .container-full {padding-left: {{ section.settings.padding_full_width | append: 'px' }};padding-right: {{ section.settings.padding_full_width | append: 'px' }}}
