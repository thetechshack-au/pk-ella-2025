    {%- endif -%}
    {%- if section.settings.title_align == 'left' or section.settings.title_align == 'left_right' -%}
        {%- if section.settings.enable_border_title -%}
            .section-block-{{section.id}} .halo-block-header {border-bottom: 1px solid {{ section.settings.border_color_title }};width: 100%;margin-bottom: {{ section.settings.mg_bottom_title | append: 'px' }}}
        {%- else -%}
            .section-block-{{section.id}} .halo-block-header{margin-bottom: 0}
        {%- endif -%}
    {%- endif -%}

    {%- if section.settings.title_align == 'left_right' -%}
        .section-block-{{section.id}} .halo-block-header {display: flex;align-items: center;justify-content: space-between;column-gap: 30px}
    {%- endif -%}

    {%- if section.settings.title_align == 'center' or section.settings.title_align == 'right' or section.settings.title_align == 'center_below' -%}
