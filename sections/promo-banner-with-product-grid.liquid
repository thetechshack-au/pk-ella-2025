            }
        {%- else -%}
            .section-block-{{section.id}} .view_all--border {
                text-decoration: underline;
                text-underline-offset: 3px;
            }
        {%- endif -%}
        .section-block-{{section.id}} .view_all .icon-svg {color: var(--color-view-all-icon-style)}
        .section-block-{{section.id}} .view_all .icon-svg svg {fill: var(--color-view-all-icon-style)}
    {%- endif -%}
    @media (min-width: 768px) {
        {%- if section.settings.title_align == 'left' -%}
            .section-block-{{section.id}} .halo-block-header .subtext-brand {text-align: right;float: right}
        {%- endif -%}

        {%- if section.settings.title_align == 'left' or section.settings.title_align == 'left_right' -%}
            .section-block-{{section.id}} .halo-block-header .rte {max-width: 60%}
        {%- endif -%}
    }
    @media (min-width: 1025px) {
        {%- if section.settings.title_align == 'center' or section.settings.title_align == 'right' or section.settings.title_align == 'center_below' -%}
