        {%- endif -%}
    }
    @media (min-width: 768px) and (max-width: 1024px) {.section-block-{{section.id}} {padding-top: {{ section.settings.mg_top_tablet | append: 'px' }};padding-bottom: {{ section.settings.mg_bottom_tablet | append: 'px' }}}}
    @media (min-width: 992px) and (max-width: 1024px) {
    }
    @media (min-width: 1025px) {.section-block-{{section.id}} {padding-top: {{ section.settings.mg_top_desktop | append: 'px' }};padding-bottom: {{ section.settings.mg_bottom_desktop | append: 'px' }}}}
    @media (max-width: 1024px) {
        {%- if section.settings.title_align == 'center' or section.settings.title_align == 'right'-%}
            {%- if section.settings.view_all != blank -%}
                .section-block-{{section.id}} .halo-block-header {padding-bottom: 20px}
                .section-block-{{section.id}} .halo-block-header .title-wrap {position: unset}
                .section-block-{{section.id}} .halo-block-header .view_all {top: auto;right: auto;left: 50%;bottom: 3px;transform:translate(-50%,0)}
            {%- endif -%}
        {%- endif -%}
        {%- if section_bg_image != blank -%}
            .section-block-{{section.id}}{background-position: center top}
        {%- endif -%}
        {%- if section.settings.section_title != blank and section.settings.view_all != blank -%}
            .section-block-{{section.id}} .halo-block-header{margin: 0 0 40px 0}
        {%- endif -%}
        .section-block-{{section.id}} .halo-block-header .title {font-size: {{ fontsize_title_mb | append: 'px' }};line-height: 1.3;}
        {%- if section.settings.title_align == 'center' or section.settings.title_align == 'right' or section.settings.title_align == 'center_below' -%}
            .section-block-{{section.id}} .halo-block-header .title-wrap{margin-bottom: {{ mg_bottom_title_mb | append: 'px' }};}
        {%- endif -%}
        {%- if section.settings.icon_view_all != blank -%}
        .section-block-{{section.id}} .view_all{
            font-size: calc(var(--font-size-view-all-style) * 0.8);
        }
        {%- endif -%}
    }

    @media (max-width: 767px) {
        .section-block-{{section.id}} {padding-top: {{ section.settings.mg_top_mobile | append: 'px' }};padding-bottom: {{ section.settings.mg_bottom_mobile | append: 'px' }}}
        .section-block-{{section.id}} .halo-block-header {flex-wrap: wrap}
        .section-block-{{section.id}} .halo-block-header .rte {margin-left: 0}
        {%- if section.settings.title_align == 'left_right'-%}
            .section-block-{{section.id}} .halo-block-header .title {order: 1}
            .section-block-{{section.id}} .halo-block-header .view_all,
            .section-block-{{section.id}} .halo-block-header .title+.animate--slide-in {order: 2}
            .section-block-{{section.id}} .halo-block-header .rte {order: 3;text-align: left;}
        {%- endif -%}
        .section-block-{{section.id}} .halo-block-header .title .text br {display: none}
        {%- if section.settings.title_align == 'left' -%}
            .section-block-{{section.id}} .halo-block-header {text-align: left;}
        {%- endif -%}
        .style-arrows-8 .section-block-{{section.id}} .halo-block-header{margin: 0 0 10px;}
    }
    @media (max-width: 551px){
    }
</style>

<div class="promo-banner-with-product-grid section-block-{{section.id}}" id="promo-banner-with-product-grid-{{section.id}}">
    <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1470' %}container-1470{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}">
        {%- if section.settings.section_title != blank -%}
            <div class="halo-block-header style--{{ section.settings.title_align }} d-flex flex-align-center{% if section.settings.title_align == 'center_below' %} flex-jc-center{% else %} flex-jc-between{%- endif -%}{% unless section.settings.title_align == 'left' or section.settings.title_align == 'left_right'%} text-center{% endunless %}">
                    {%- if section.settings.title_align == 'center' or section.settings.title_align == 'right' or section.settings.title_align == 'left'%}
