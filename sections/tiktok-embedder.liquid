    style="--section-bg: {% if section_gradient != blank %}{{ section_gradient }}{% elsif section_bg != blank %}{{ section_bg }}{% endif %};"
>
  <div class="{{ container }}">
    <div class="section-content">
        {%- if section_title != blank -%}
            <h3 class="title text-{{ text_align }} {% if section_title_enable_underline %}underlined underline-style-{{ section_title_underline_style }}{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"
