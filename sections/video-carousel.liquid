    .halo-video-carousel-content .slick-center .video-section__media,
    .halo-video-carousel-content .slick-slide.video-wrapper[aria-hidden="true"]:not([tabindex="-1"]) + .slick-cloned[aria-hidden="true"] .video-section__media,
