<link rel="stylesheet" href="{{ 'component-blog-post.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-blog-post.css' | asset_url | stylesheet_tag }}</noscript>
{%- liquid
    assign blog_show_author = section.settings.blog_show_author
    assign blog_show_date = section.settings.blog_show_date
    assign blog_show_des = section.settings.blog_show_des
    assign show_more_pos = section.settings.show_more_pos
    assign blog_show_more_icon = section.settings.blog_show_more_icon
    assign text_align = section.settings.block_item_align | default: 'left'
    assign text_by = section.settings.text_by
    assign text_on = section.settings.text_on
    assign margin_bottom_image = section.settings.margin_bottom_image
    assign margin_bottom_title = section.settings.margin_bottom_title | default: '0'
    assign margin_bottom_info = section.settings.margin_bottom_info | default: '13'
    assign margin_bottom_des = section.settings.margin_bottom_des | default: '6'
    assign limit_content_des = section.settings.limit_content_des | default: '22'
    assign blog_date_format = section.settings.blog_date_format
    assign enable_blog_button = section.settings.enable_blog_button
    assign block_item_style = section.settings.block_item_style
    assign blog_bg = section.settings.blog_bg
    assign blog_bg_gradient = section.settings.blog_bg_gradient
    assign blog_bg_image = section.settings.blog_bg_image
    assign color_title = section.settings.color_title
    assign fontsize_title = section.settings.fontsize_title
    assign fontsize_title_mb = section.settings.fontsize_title_mb
    assign margin_bottom_heading = section.settings.margin_bottom_heading
    assign color_des = section.settings.color_des
    assign fontsize_des = section.settings.fontsize_des
    assign fontsize_des_mb = section.settings.fontsize_des_mb
    assign margin_bottom_desheading = section.settings.margin_bottom_desheading
    assign mg_top_desktop = section.settings.mg_top_desktop
    assign mg_top_tablet = section.settings.mg_top_tablet
    assign mg_top_mobile = section.settings.mg_top_mobile
    assign mg_bottom_desktop = section.settings.mg_bottom_desktop
    assign mg_bottom_tablet = section.settings.mg_bottom_tablet
    assign mg_bottom_mobile = section.settings.mg_bottom_mobile
    assign padding_full_width = section.settings.padding_full_width
    assign enable_border_box = section.settings.enable_border_box
    assign color_border_box = section.settings.color_border_box
    assign color_title_item = section.settings.color_title_item
    assign color_date_item = section.settings.color_date_item
    assign color_des_item = section.settings.color_des_item
    assign blog_item_bg = section.settings.blog_item_bg
    assign border_radius_item = section.settings.border_radius_item
    assign color_button_item = section.settings.color_button_item
    assign color_button_item_border = section.settings.color_button_item_border
    assign color_button_item_bg = section.settings.color_button_item_bg
    assign color_button_item_hover = section.settings.color_button_item_hover
    assign color_button_item_border_hover = section.settings.color_button_item_border_hover
    assign color_button_item_bg_hover = section.settings.color_button_item_bg_hover
    assign custom_width_title = section.settings.custom_width_title
    assign mg_minus_desktop = section.settings.mg_minus_desktop
    if section.settings.content_on_image
        assign content_on_image = 'content_on_image'
    endif
    assign content_bg = section.settings.content_bg
    assign content_gradient = section.settings.content_gradient
    assign button_text_transform = section.settings.block_button_text_transform
    assign button_text_fw = section.settings.block_button_fw
-%}

<style>
    #shopify-section-{{section.id}} {padding-top: {{ mg_minus_desktop | times: 0.5 | append: 'px' }}}
    .section-block-{{section.id}} .halo-block-header {margin-top: -{{ mg_minus_desktop | append: 'px' }}}
    {%- if blog_bg_image != blank -%}
        .section-block-{{section.id}}{background: url({{ blog_bg_image | img_url: '1920x' }});background-repeat: repeat-x;background-size: cover}
        .section-block-{{section.id}} .halo-block-header .title .text {background-color: transparent}
    {%- else -%}
        .section-block-{{section.id}},
        .section-block-{{section.id}} .halo-block-header .title .text {background: {% if blog_bg_gradient != blank %}{{ blog_bg_gradient }}{% else %}{{ blog_bg }}{% endif %}}
    {%- endif -%}
    {%- unless section.settings.enable_border_title -%}
        .section-block-{{section.id}} .halo-block-header .title .text {background-color: transparent}
    {%- endunless -%}
    .section-block-{{section.id}} .halo-block-header .title:before {background-color: {{ section.settings.border_color_title }};
        {%- unless section.settings.enable_border_title -%}
            display: none;
        {%- endunless -%}
    }
    .section-block-{{section.id}} .halo-block-header .title {color: {{ color_title }};font-size: {{ fontsize_title | append: 'px'  }};margin-bottom: {{ margin_bottom_heading | append: 'px' }};line-height: 1.3;}
    .section-block-{{section.id}} .halo-block-header .rte {color: {{ color_des }};font-size: {{ fontsize_des | append: 'px'  }};margin-bottom: {{ margin_bottom_desheading | append: 'px' }};line-height: 1.5;}
    .section-block-{{section.id}} .article-card {border-radius: {{ border_radius_item | append: 'px' }};overflow: hidden;background-color: {{ blog_item_bg }}}
    .section-block-{{section.id}} .article-card .article-card__image-wrapper a,.section-block-{{section.id}} .article-card .article-card__image-wrapper svg {border-radius: {{ section.settings.image_radius | append: 'px' }};}
    {%- if enable_border_box -%}
    .section-block-{{section.id}} .article-card__info {border: 1px solid {{ color_border_box  }};border-top: 0;padding: 16px 27px 28px}
    {%- endif -%}
    .section-block-{{section.id}} .article-card__title {color: {{ color_title_item }}}
    .section-block-{{section.id}} .article-card__author {color: {{ color_date_item }}}
    .section-block-{{section.id}} .article-card__des {color: {{ color_des_item }}}
    .section-block-{{section.id}} .article-card__footer a {color: {{ color_button_item }};text-transform: {{ button_text_transform }};font-weight: {{ button_text_fw }}}
    .section-block-{{section.id}} .article-card__footer a svg {fill: {{ color_button_item }}}
    .section-block-{{section.id}} .article-card-header a.article-card__link {color: {{ color_button_item }};text-transform: {{ button_text_transform }};font-weight: {{ button_text_fw }}}
    .section-block-{{section.id}} .article-card-header a svg {fill: {{ color_button_item }}}
    .section-block-{{section.id}} .article-card-header a span:after {background: {{ color_button_item }}}
    .section-block-{{section.id}} .article-card-header a:hover {color: {{ color_button_item_hover }};}
    .section-block-{{section.id}} .article-card-header a:hover svg {fill: {{ color_button_item_hover }};}
    .section-block-{{section.id}} .article-card-header a:hover span:after {background: {{ color_button_item_hover }};}
    .section-block-{{section.id}} .view_all {display: flex;width: fit-content;column-gap: 10px;font-weight: var(--font-weight-view-all-style);margin-top: var(--mg-top-view-style);margin-bottom: var(--mg-bottom-view-style);color: var(--color-view-all-style)}
    .section-block-{{section.id}} .view_all:not(.has-border) {border-bottom: none}
    .section-block-{{section.id}} .view_all.has-border {border-bottom: 1px solid}
    .section-block-{{section.id}} .view_all .icon-svg {color: var(--color-view-all-icon-style)}
    .section-block-{{section.id}} .view_all .icon-svg svg {fill: var(--color-view-all-icon-style)}
    .article-card-header .article-card__link {margin-top:{% if settings.blog_title_font_size >= 18 %} 5px{% else %} 2px{% endif %}}
    .section-block-{{section.id}}  .halo-row-placeholder {display: flex;}
    {%- if enable_blog_button -%}
        .section-block-{{section.id}} .article-card__footer {text-decoration: unset}
        .section-block-{{section.id}} .article-card__footer a.button {color: {{ color_button_item }};background: {{ color_button_item_bg }};border: 1px solid {{ color_button_item_border }};font-weight: var(--btn-1-font-weight);text-transform: var(--btn-1-text-transform);width: 162px}
        .btn_1_br_outside .section-block-{{section.id}} .article-card__footer a.button:after {border: 1px solid {{ color_button_item_border }}}
        .section-block-{{section.id}} .article-card__footer a.button:hover {color: {{ color_button_item_hover }};background: {{ color_button_item_bg_hover }};border: 1px solid {{ color_button_item_border_hover }}}
        .btn_1_br_outside .section-block-{{section.id}} .article-card__footer a.button:hover:after {border: 1px solid {{ color_button_item_border_hover }}}
        .section-block-{{section.id}} .article-card-header a.button {color: {{ color_button_item }};background: {{ color_button_item_bg }};border: 1px solid {{ color_button_item_border }};font-weight: var(--btn-1-font-weight);text-transform: var(--btn-1-text-transform);width: 162px;text-align: center;}
        .btn_1_br_outside .section-block-{{section.id}} .article-card-header a.button:after {border: 1px solid {{ color_button_item_border }}}
        .section-block-{{section.id}} .article-card-header a.button:hover {color: {{ color_button_item_hover }};background: {{ color_button_item_bg_hover }};border: 1px solid {{ color_button_item_border_hover }}}
        .btn_1_br_outside .section-block-{{section.id}} .article-card-header a.button:hover:after {border: 1px solid {{ color_button_item_border_hover }}}
        {%- unless show_more_pos == 'right_title' -%}
        .section-block-{{section.id}} .article-card__author {display: flex;justify-content: center}
        {%- endunless -%}

        .section-block-{{section.id}} .article-card__author .article__date {order: -1;margin-right: 4px}
        .section-block-{{section.id}} .article-card__info {padding: 22px 45px 28px}
        .article-card__link-right {min-width: unset;display: inline-block;width: auto;margin: 0}
    {%- endif -%}
    .section-block-{{section.id}} .article-card__title a span{background-image: linear-gradient(currentColor, currentColor);background-position: 0 90%;background-repeat: no-repeat;background-size: 0 1px;transition: background-size .5s}
    .section-block-{{section.id}} .article-card__title .link-effect > span:after{content: none}
    @media (min-width: 1200px) {
        .section-block-{{section.id}} {padding-top: {{ mg_top_desktop | append: 'px' }};padding-bottom: {{ mg_bottom_desktop | append: 'px' }}}
        /*.article-card__title .link-effect > span:after{background: {{ color_title_item }};bottom:{% if settings.blog_title_font_size >= 20 %} 0px{% else %} 3px{% endif %}}*/
        {%- if content_on_image == 'content_on_image' -%} 
            .section-block-{{ section.id }} .article-card {position: relative}
            .section-block-{{ section.id }} .article-card .article-card__info {position: absolute;bottom: 0;left: 0;width: calc(100% - 30px * 2);margin: 30px;background: {% if content_gradient != blank %}{{ content_gradient }}{% else %}{{ content_bg }}{% endif %};padding-top: 25px;padding-bottom: 23px}
        {%- endif -%}
    }
    @media (min-width: 1025px) {
        {%- if section.settings.container == 'fullwidth' -%}
            .section-block-{{section.id}} .container-full {padding-left: {{ padding_full_width | append: 'px' }};padding-right: {{ padding_full_width | append: 'px' }}}
        {%- endif -%}
        .section-block-{{section.id}} .halo-block-header .title .text {width: {{ custom_width_title | append: 'px' }}}
        .section-block-{{ section.id }} .halo-block-header.view_all-right_title {position: relative}
        .section-block-{{ section.id }} .halo-block-header.view_all-right_title .view_all {position: absolute;top: calc(50% + {{ margin_bottom_heading | append: 'px' }});right: 0;transform: translateY(calc(-50% - {{ margin_bottom_heading | append: 'px' }}))}
        .section-block-{{section.id}} .halo-row {margin-left: var(--row-distance-style);margin-right: var(--row-distance-style)}
        .section-block-{{section.id}} .halo-row .halo-item{padding-left: var(--item-distance-style);padding-right: var(--item-distance-style)}
        .section-block-{{section.id}} .article-card__title:hover a span{background-size: 100% 1px}
    }
    @media (min-width: 768px) and (max-width: 1199px) {.section-block-{{section.id}} {padding-top: {{ mg_top_tablet | append: 'px' }};padding-bottom: {{ mg_bottom_tablet | append: 'px' }}}}
    @media (max-width: 1024px) {
        {%- if blog_bg_image != blank -%}
            .section-block-{{section.id}}{background-position: center top}
        {%- endif -%}
        .section-block-{{ section.id }} .halo-block-header.view_all-right_title .title {margin-bottom: 10px}
        {%- if enable_blog_button -%}
            .section-block-{{section.id}} .halo-block-header .title {margin-bottom: {{ margin_bottom_heading | divided_by: 2 | append: 'px' }}}
            .section-block-{{section.id}} .article-card__info {padding: 22px 8px 28px}
        {%- endif -%}
        .article-card__title { 
            font-size: {{settings.blog_title_font_size | times: 0.8 }}px;
            line-height: {{settings.blog_title_line_height | times: 0.8 }}px;
        }
        .section-block-{{section.id}} .halo-block-header .title {font-size: {{ fontsize_title_mb | append: 'px' }}} 
        .section-block-{{section.id}} .halo-block-header .rte {font-size: {{ fontsize_des_mb | append: 'px'  }};}
    }
    @media (max-width: 767px) {
        .section-block-{{section.id}} {padding-top: {{ mg_top_mobile | append: 'px' }};padding-bottom: {{ mg_bottom_mobile | append: 'px' }}}
    }
</style>

<div class="featured-blog-block section-block-{{section.id}}" id="featured-blog-{{section.id}}" data-loader-script="{{ 'halo.slide-blog.js' | asset_url }}">
    <div class="{% if section.settings.container == 'fullwidth' %}container-full{% elsif section.settings.container == '1170' %}container-1170{% elsif section.settings.container == '1570' %}container-1570{% elsif section.settings.container == '1770' %}container-1770{% else %}container{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}">
        {%- if section.settings.featured_blog_title != blank -%}
            <div class="halo-block-header text-{{ section.settings.title_align }} view_all-{{ section.settings.view_all_pos }}">
                <h3 class="title{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if settings.banner_animation == 'effect_fade_up' %}style="--animation-order: 0;"{% endif %}><span class="text">{{ section.settings.featured_blog_title }}</span></h3>
                {%- if section.settings.featured_blog_des != blank -%}
                    <div class="rte subtext-blog{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if settings.banner_animation == 'effect_fade_up' %}style="--animation-order: 1;"{% endif %}>{{ section.settings.featured_blog_des }}</div>
                {%- endif -%}
                {%- if section.settings.view_all != blank -%}
                    <a class="view_all{% if section.settings.enable_border_view_all %} has-border{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if section.settings.link_view_all == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.link_view_all }}"{% endif %} title="{{section.settings.view_all}}" style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 2;{% endif %}--font-weight-view-all-style: {{ section.settings.font_weight_view_all }};--mg-top-view-style: {{ section.settings.mg_top_view | append: 'px' }};--mg-bottom-view-style: {{ section.settings.mg_bottom_view | append: 'px' }};--color-view-all-style: {{ section.settings.color_view_all }};--color-view-all-icon-style: {{ section.settings.color_view_all_icon }}">
                        {%- if section.settings.icon_view_all != blank and section.settings.view_all_icon_side == 'left' -%}
                        <span class="icon-svg">{{ section.settings.icon_view_all }}</span>
                        {%- endif -%}
                        {{ section.settings.view_all }}
                        {%- if section.settings.icon_view_all != blank and section.settings.view_all_icon_side == 'right' -%}
                        <span class="icon-svg">{{ section.settings.icon_view_all }}</span>
                        {%- endif -%}
                    </a>
                {%- endif -%}
            </div>
        {%- endif -%}
        <div class="{% if section.settings.blog_posts != blank %}halo-row{% else %}halo-row-placeholder{% endif %} column-{{ section.settings.blog_results_per_row }}{% if section.settings.post_limit == 2 %} disable_dots_tablet{% endif %}" data-rows="{{ section.settings.blog_results_per_row }}" data-blogs-slider style="--row-distance-style: {{ section.settings.item_distance | prepend: '-' | append: 'px' }};">
            {%- assign blog = blogs[section.settings.blog_posts] -%}
            {%- if section.settings.blog_posts != blank and section.settings.blog_posts.articles_count > 0 -%}
                {%- for article in blog.articles limit: section.settings.post_limit -%}
                <div class="halo-item" id="block-{{article.id}}" style="--item-distance-style: {{ section.settings.item_distance | append: 'px' }};">
                    {% render 'article-card-featured',
                        article: article,
                        blog_show_author: blog_show_author,
                        blog_show_date: blog_show_date,
                        blog_show_des: blog_show_des,
                        show_more_pos: show_more_pos,
                        blog_show_more_icon: blog_show_more_icon,
                        text_align: text_align,
                        text_by: text_by,
                        text_on: text_on,
                        margin_bottom_image: margin_bottom_image,
                        margin_bottom_title: margin_bottom_title,
                        margin_bottom_info: margin_bottom_info,
                        margin_bottom_des: margin_bottom_des,
                        limit_content_des: limit_content_des,
                        blog_date_format: blog_date_format,
                        enable_blog_button: enable_blog_button,
                        block_item_style: block_item_style
                    %}
                </div>
                {%- endfor -%}
            {%- else -%}
                {% for i in (1..section.settings.post_limit) -%}
                    {%- assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1 -%}
                    {%- assign placeholder_image = 'blog-apparel-' | append: placeholder_image_index -%}
                    <div class="halo-item" id="block-{{article.id}}" style="--item-distance-style: {{ section.settings.item_distance | append: 'px' }};">
                        <div class="article-card">
                            <div class="article-card__image-wrapper" style="--margin-bottom: {{ margin_bottom_image | append: 'px' }}">
                                {{ placeholder_image | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                            <div class="article-card__info text-{{ text_align }}">
                                <h3 class="article-card__title" style="--margin-bottom: {{ margin_bottom_title | append: 'px' }}">{{ 'sections.featured_blog.onboarding_title' | t }}</h3>
                                <div class="article-card__des" style="--margin-bottom: {{ margin_bottom_des | append: 'px' }}">{{ 'sections.featured_blog.onboarding_content' | t }}</div>
                            </div>
                        </div>
                    </div>
                {%- endfor -%}
            {%- endif -%}
        </div>
    </div>
    </div>
{% schema %}
{
    "name": "t:sections.featured_blog.name",
    "class": "sections-featured-blog",
    "settings": [
    {
        "type": "header",
        "content": "t:settings_schema.general.name"
    },
    {
        "type": "select",
        "id": "container",
        "label": "t:sections.layout.container.option",
        "default": "container",
        "options": [
        {
            "value": "container",
            "label": "t:sections.layout.container.option1"
        },
        {
            "value": "1170",
            "label": "t:sections.layout.container.option4"
        },
        {
            "value": "1570",
            "label": "t:sections.layout.container.option6"
        },
        {
            "value": "1770",
            "label": "t:sections.layout.container.option3"
        },
        {
            "value": "fullwidth",
            "label": "t:sections.layout.container.option2"
        }]
    },
    {
        "type": "range",
        "id": "padding_full_width",
        "label": "t:sections.layout.container.padding_full_width",
        "min": 0,
        "max": 100,
        "step": 5,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 0
    },
    {
        "type": "range",
        "id": "mg_minus_desktop",
        "label": "t:sections.layout.mg_minus_desktop.label",
        "min": 0,
        "max": 300,
        "step": 10,
        "unit": "t:sections.layout.mg_desktop.unit",
        "default": 0
    },
    {
        "type" : "color",
        "id" : "blog_bg",
        "label" : "t:settings_schema.colors.settings.colors_name.background_color_2",
        "default" : "#fff"
    },
    {
        "type" : "color_background",
        "id" : "blog_bg_gradient",
        "label" : "t:settings_schema.colors.settings.colors_name.background_color_gradient"
    },
    {
        "type" : "image_picker",
        "id" : "blog_bg_image",
        "label" : "t:settings_schema.colors.settings.colors_name.background_image"
    },
    {
        "type": "header",
        "content": "t:sections.image-banner.blocks.image.settings.content.section_header"
    },
    {
        "type": "text",
        "id": "featured_blog_title",
        "label": "t:sections.image-banner.blocks.image.settings.content.label__1",
        "default": "Latest Posts"
    },
    {
        "type": "range",
        "id": "margin_bottom_heading",
        "label": "t:settings_schema.typography.settings.typography.title_margin_bottom",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 5
    },
    {
        "type": "checkbox",
        "id": "enable_border_title",
        "label": "t:settings_schema.typography.settings.typography.title_enable_border",
        "default": true
    },
    {
        "type": "range",
        "id": "custom_width_title",
        "label": "t:settings_schema.typography.settings.typography.title_custom_width",
        "min": 100,
        "max": 800,
        "step": 10,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 420
    },
    {
        "type" : "color",
        "id" : "border_color_title",
        "label": "t:settings_schema.typography.settings.typography.title_border_color",
        "default": "#232323"
    },
    {
        "type" : "color",
        "id" : "color_title",
        "label": "t:settings_schema.typography.settings.typography.title_color",
        "default" : "#232323"
    },
    {
        "type": "range",
        "id": "fontsize_title",
        "label": "t:settings_schema.typography.settings.typography.title_font_size",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 16
    },
    {
        "type": "range",
        "id": "fontsize_title_mb",
        "label": "t:settings_schema.typography.settings.typography.title_font_size_mb",
        "min": 10,
        "max": 50,
        "step": 1,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 16
    },
    {
        "type" : "liquid",
        "id" : "featured_blog_des",
        "label" : "t:sections.image-banner.blocks.image.settings.content.label__2"
    },
    {
        "type": "range",
        "id": "margin_bottom_desheading",
        "label": "t:settings_schema.typography.settings.typography.des_margin_bottom",
        "min": 0,
        "max": 50,
        "step": 1,
        "unit": "t:sections.layout.fontsize.fontsize_title.unit",
        "default": 0
    },
    {
        "type" : "color",
        "id" : "color_des",
        "label": "t:settings_schema.typography.settings.typography.des_color",
