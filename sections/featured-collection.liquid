                    "type" : "color",
                    "id" : "color_hover_des",
                    "label": "t:settings_schema.colors.settings.colors_link.label__2",
                    "default" : "#4dac8b"
                },
                {
                    "type": "range",
                    "id": "fontsize_des",
                    "label": "t:sections.collection_lookbook.blocks.collection.link.link_fs",
                    "min": 10,
                    "max": 50,
                    "step": 1,
                    "unit": "t:sections.layout.fontsize.fontsize_title.unit",
                    "default": 14
