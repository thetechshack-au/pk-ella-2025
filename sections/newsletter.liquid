<link rel="stylesheet" href="{{ 'component-newsletter-section.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-newsletter-section.css' | asset_url | stylesheet_tag }}</noscript>
{%- liquid
  assign mg_top_desktop = section.settings.mg_top_desktop | append: 'px'
  assign mg_top_tablet = section.settings.mg_top_tablet | append: 'px'
  assign mg_top_mobile = section.settings.mg_top_mobile | append: 'px'

  assign mg_bottom_desktop = section.settings.mg_bottom_desktop | append: 'px'
  assign mg_bottom_tablet = section.settings.mg_bottom_tablet | append: 'px'
  assign mg_bottom_mobile = section.settings.mg_bottom_mobile | append: 'px'
  assign container = section.settings.container
  assign padding_full_width = section.settings.padding_full_width | append: 'px'
  assign section_text_align = section.settings.section_text_align
  assign newsletter_bg_image = section.settings.newsletter_bg_image
  assign enable_parallax = section.settings.enable_parallax
  
-%}
<style>
  {% if newsletter_bg_image != blank %}
    .newsletter-section{background: url({{ newsletter_bg_image | img_url: '1920x' }});background-repeat: round;}
    .newsletter-section.enable_parallax{background-position: center;background-repeat: repeat-x;background-attachment: fixed;background-size: cover;}
  {% endif %}
  .newsletter-section .newsletter-form__field-wrapper .form-input-placeholder::placeholder {opacity: 0}
  .newsletter-success-modal.halo-popup {opacity: 1;visibility: visible;pointer-events: auto;display: none;border-radius: 3px;transition: none;}
  .newsletter-success-modal.halo-popup .halo-popup-wrapper {position: relative;padding: 15px 30px;position: relative;z-index: 999;background: #fff;text-align: center;}
  .newsletter-success-modal.halo-popup .halo-popup-wrapper .close {width: 35px;height: 35px;display: block;text-align: center;position: absolute;top: 0;right: 0;padding: 8px;border: none;background: none;}
  .newsletter-success-modal.halo-popup .halo-popup-wrapper .form-message--success {color: #428445;}
  .newsletter-success-modal.halo-popup .halo-popup-wrapper .form-message--success svg {color: #428445;fill: #428445;}
  .newsletter-success-modal.halo-popup .halo-popup-wrapper svg {width: 18px;height: 18px;margin-right: 5px;position: relative;top: -2px;}
  @media (min-width: 1200px) {.section-block-{{section.id}} {padding-top: {{ mg_top_desktop }};padding-bottom: {{ mg_bottom_desktop }}}}
  @media (min-width: 1025px) { {%- if section.settings.container == 'fullwidth' -%}.section-block-{{section.id}} .container-full {padding-left: {{ padding_full_width }};padding-right: {{ padding_full_width }}}{%- endif -%}}
  @media (min-width: 768px) and (max-width: 1199px) {.section-block-{{ section.id }} {padding-top: {{ mg_top_tablet }};padding-bottom: {{ mg_bottom_tablet }}}}
  @media (max-width: 767px) {
    .section-block-{{ section.id }} {padding-top: {{ mg_top_mobile }};padding-bottom: {{ mg_bottom_mobile }}}
    {% if newsletter_bg_image != blank %}
      .newsletter-section{background-attachment: unset;}
      .newsletter-section .newsletter-form__field-wrapper{gap: 5px;}
    {% endif %}
  }
</style>

<div class="newsletter-section {% if enable_parallax %} enable_parallax{% endif %} section-block-{{section.id}}" id="newsletter-section-{{section.id}}" style="--footer-top-bg: {% if section.settings.background_gradient != blank %}{{ section.settings.background_gradient }}{% elsif section.settings.background != blank %}{{ section.settings.background }}{% endif %}">
  <div class="{% if container == 'fullwidth' %}container-full{% elsif section.settings.container == '1670' %}container-1670{% elsif section.settings.container == '1570' %}container-1570{% elsif section.settings.container == '1470' %}container-1470{% elsif container == '1170' %}container-1170{% elsif container == '1770' %}container-1770{% else %}container{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger{% if newsletter_bg_image != blank %} animate--fade-in{% else %} animate--slide-in{% endif %}{% endif %}">
    <animate-element class="section-content-wrapper{% if section.settings.section_item_distance == 0 %} empty_gap{% endif %}{% if section.settings.enable_social_media_below %} enable_social_media_below{% endif %}{% if enable_parallax %} enable_parallax{% endif %}" style="--justify-content: {{ section.settings.justify_section_content }}; --grid-gap-style: {{ section.settings.section_item_distance | append: 'px' }}">
      {%- for block in section.blocks -%}
        {%- if block.type == 'newsletter' -%}
          {% liquid
            assign section_title = block.settings.section_title
            assign special_text = block.settings.special_text

            if special_text != blank
              assign special_text_code = special_text | prepend: '<span class="special-text">' | append: '</span>'
              assign section_title = section_title | replace: special_text, special_text_code
            endif

            assign section_title_font_size = block.settings.section_title_font_size | append: 'px'
            assign section_title_font_size_mb = block.settings.section_title_font_size_mb | append: 'px'
            assign section_title_color = block.settings.section_title_color
            assign section_title_font_weight = block.settings.section_title_font_weight
            
            assign section_subtitle = block.settings.section_subtitle
            assign section_subtitle_font_size = block.settings.section_subtitle_font_size | append: 'px'
            assign section_subtitle_font_size_mb = block.settings.section_subtitle_font_size_mb | append: 'px'
            assign section_subtitle_color = block.settings.section_subtitle_color
            assign section_subtitle_font_weight = block.settings.section_subtitle_font_weight
            
            assign show_between_input_button = block.settings.show_between_input_button
            assign section_description = block.settings.section_description
            assign section_description_font_size = block.settings.section_description_font_size | append: 'px'
            assign section_description_font_size_mb = block.settings.section_description_font_size_mb | append: 'px'
            assign section_description_font_weight = block.settings.section_description_font_weight
            assign section_description_color = block.settings.section_description_color

            assign button_text = block.settings.button_text
            assign button_style = block.settings.button_style
            assign button_font_size = block.settings.button_font_size | append: 'px'
            assign button_width = block.settings.button_width | append: 'px'
            assign button_text_color = block.settings.button_text_color
            assign button_border_color = block.settings.button_border_color
            assign button_background_color = block.settings.button_background_color
            assign button_gradient_color = block.settings.button_gradient_color
            assign button_text_color_hover = block.settings.button_text_color_hover
            assign button_border_color_hover = block.settings.button_border_color_hover
            assign button_background_color_hover = block.settings.button_background_color_hover
            assign button_gradient_color_hover = block.settings.button_gradient_color_hover
            assign button_text_transform = block.settings.button_text_transform
            assign button_font_weight = block.settings.button_font_weight
            assign show_box_shadow_button = block.settings.show_box_shadow_button
            assign shadow_color_button = block.settings.shadow_color_button

            assign input_placeholder = block.settings.input_placeholder
            assign input_placeholder_color = block.settings.input_placeholder_color
            assign input_background_color = block.settings.input_background_color
            assign input_border_color = block.settings.input_border_color
            assign form_gap = block.settings.form_gap | append: 'px'
            assign show_input_field = block.settings.show_input_field
            assign input_style = block.settings.input_style
            assign show_box_shadow_input = block.settings.show_box_shadow_input
            assign shadow_color_input = block.settings.shadow_color_input
          %}
          <div class="section-content{% unless show_input_field %} no-input{% endunless %} text-{{ section_text_align }} flex-direction-{{ block.settings.newsletter_content_direction }}" style="--newsletter_form_justify_content: {{block.settings.newsletter_form_justify_content}};--spacing_tb: {{ block.settings.spacing_tb }}px">
            {% if block.settings.custom_width and block.settings.newsletter_content_direction == 'column' %} 
              <div class="custom-width" style="width: 100%;max-width: {{ block.settings.width }};">
            {% endif %}
            {%- if section_subtitle != blank -%}
              <div class="title-wrapper">
            {%- endif -%}
              {%- if section_title != blank -%}
                <h3 class="title text-{{ section_text_align }}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 1;{% endif %}--title-font-size: {{ section_title_font_size }};--title-font-size-mb: {{ section_title_font_size_mb }};--title-font-weight: {{ section_title_font_weight }};--title-color: {% if section_title_color != blank %}{{ section_title_color }}{% endif %};--title-margin-bottom: {{ block.settings.mg_bottom_title | append: 'px' }};--title-margin-bottom-mb: {{ block.settings.mg_bottom_title_mb | append: 'px' }};--title-text-transform: {{ block.settings.section_title_text_transform }};--title-font-style: {{ block.settings.section_title_font_style }}"><span class="text">{{ section_title }}</span></h3>
              {%- endif -%}
            {%- if section_subtitle != blank -%}
              <div class="subtitle text-{{ section_text_align }}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 1;{% endif %}--subtitle-font-size: {{ section_subtitle_font_size }};--subtitle-font-size-mb: {{ section_subtitle_font_size_mb }};--subtitle-font-weight: {{ section_subtitle_font_weight }};--subtitle-color: {% if section_subtitle_color != blank %}{{ section_subtitle_color }}{% endif %};--subtitle-margin-bottom: {{ block.settings.mg_bottom_subtitle | append: 'px' }};--subtitle-margin-bottom-mb: {{ block.settings.mg_bottom_subtitle_mb | append: 'px' }};--subtitle-text-transform: {{ block.settings.section_subtitle_text_transform }};--subtitle-font-style: {{ block.settings.section_subtitle_font_style }}"><span class="text">{{ section_subtitle }}</span></div>
              </div>
            {%- endif -%}
            {%- if section_description != blank and show_between_input_button == false -%}
              <div class="description text-{{ section_text_align }}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 2;{% endif %}--description-font-size: {{ section_description_font_size }};--description-font-size-mb: {{ section_description_font_size_mb }};--description-color: {% if section_description_color != blank %}{{ section_description_color }}{% endif %};--description-font-weight: {{ section_description_font_weight }};--description-margin-bottom: {{ block.settings.margin_bottom_des | append: 'px' }};">{{ section_description }}</div>
            {%- endif -%}
            <div class="section-form-wrapper text-{{ section_text_align }} width-behavior-{{ block.settings.input_width_behavior }}{% if input_style == 'style_2' %} input_style_2{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}"{% if settings.banner_animation == 'effect_fade_up' %} style="--animation-order: 3;"{% endif %}>
              <newsletter-form class="newsletter-section-form newsletter-section-block">
                {%- form 'customer', id: 'NewsletterSection', class: 'newsletter-block newsletter-form' -%}
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <div class="newsletter-form__field-wrapper" style="--placeholder-color: {% if input_placeholder_color != blank %}{{ input_placeholder_color }}{% endif %};--input-background: {% if input_background_color != blank %}{{ input_background_color }}{% endif %};--input-border-color: {% if input_border_color != blank %}{{ input_border_color }}{% endif %};--form-gap: {{ form_gap }};--input-max-width: {{ block.settings.input_width | append: 'px' }};--input-max-width-number: {{ block.settings.input_width }};--input-text-font-size: {{ block.settings.input_text_font_size |append: 'px' }};--input-border-radius: {{ block.settings.input_border_radius | append: 'px' }}">
                    {%- if show_input_field -%}
                      <div class="field">
                        <label class="field__label hiddenLabels" for="NewsletterForm--{{ section.id }}">{{ 'newsletter.label' | t }}</label>
                        <input {% if show_box_shadow_input %}style="box-shadow: 0 4px 8px 0 rgba({{ shadow_color_input.red }},{{ shadow_color_input.green }},{{ shadow_color_input.blue }}, 0.15)!important;" {% endif %}id="NewsletterForm--{{ section.id }}" type="email" name="contact[email]" class="field__input form-input-placeholder" value="{{ form.email }}" aria-required="true" autocorrect="off" autocapitalize="off" autocomplete="email"{% if form.errors %} autofocus aria-invalid="true" aria-describedby="ContactFooter-error"{% elsif form.posted_successfully? %} aria-describedby="ContactFooter-success" {% endif %} placeholder="{{ input_placeholder }}" required="required">
                        <div class="effect_placeholder"><span class="input_placeholder" style="font-size: var(--input-text-font-size, var(--font-body-size));{% if input_style == 'style_2' %}font-weight: 700;{% endif %}">{{ input_placeholder }}</span></div>
                      </div>
                    {%- endif -%}
                    {%- if section_description != blank and show_between_input_button -%}
                      <div class="description text-{{ section_text_align }}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 2;{% endif %}--description-font-size: {{ section_description_font_size }};--description-font-size-mb: {{ section_description_font_size_mb }};--description-color: {% if section_description_color != blank %}{{ section_description_color }}{% endif %};--description-font-weight: {{ section_description_font_weight }};--description-margin-bottom: {{ block.settings.margin_bottom_des | append: 'px' }};">{{ section_description }}</div>
                    {%- endif -%}
                    <button {% unless show_input_field %}data-open-newsletter-popup{% endunless %} type="{% if show_input_field %}submit{% else %}button{% endif %}" class="button newsletter-form__button" name="commit" id="Subscribe-{{ section.id }}" aria-label="{{ 'newsletter.button_label' | t }}" style="--button-width: {{ button_width }};--button-font-size: {{ button_font_size }};--button-text-color: {% if button_text_color != blank %}{{ button_text_color }}{% endif %};--button-border-color: {% if button_border_color != blank %}{{ button_border_color }}{% endif %};--button-background: {% if button_gradient_color != blank %}{{ button_gradient_color }}{% elsif button_background_color != blank %}{{ button_background_color }}{% endif %};--button-text-color-hover: {% if button_text_color_hover != blank %}{{ button_text_color_hover }}{% endif %};--button-border-color-hover: {% if button_border_color_hover != blank %}{{ button_border_color_hover }}{% endif %};--button-background-hover: {% if button_gradient_color_hover != blank %}{{ button_gradient_color_hover }}{% elsif button_background_color_hover != blank %}{{ button_background_color_hover }}{% endif %};--button-text-transform: {{ button_text_transform }};--button-font-weight: {{ button_font_weight }};{% if show_box_shadow_button %}box-shadow: 0 4px 8px 0 rgba({{ shadow_color_button.red }},{{ shadow_color_button.green }},{{ shadow_color_button.blue }}, 0.15)!important;{% endif %};border-radius:{{ block.settings.button_border_radius }}px;">
                      {% if settings.enable_button_1_border_outside %}<span>{% endif %}
                        {% if button_style == 'icon' %}
                          <svg class="icon icon-fly" data-name="Layer 2" viewBox="0 0 311.13 316.39">   <g data-name="Layer 2">     <path d="M304.27,1.97c-4.3-2.54-9.48-2.63-13.86-.23L7.16,164.15c-4.77,2.67-7.5,7.7-7.13,13.16,.36,5.38,3.64,9.94,8.6,11.99l110.07,49.16,4.93,2.21v61.71c0,5.71,3.41,10.79,8.69,12.96,1.73,.71,3.54,1.05,5.33,1.05,3.67,0,7.26-1.45,9.95-4.19l41.58-42.25,76.72,34.27,.45,.19c1.64,.64,3.36,.95,5.07,.95,2.79,0,5.54-.83,7.91-2.44,3.65-2.5,5.9-6.56,6.08-10.96L311.08,14.94l.05-.92c0-5-2.57-9.5-6.86-12.05Zm-100.11,252.76l-54.57-24.37L288.4,42.99l-22.19,239.46-62.05-27.72Zm-60.53,33v-38.13l26.06,11.64-26.06,26.49ZM266.9,38.26L130.32,221.75,27.22,175.7,266.9,38.26Z"></path>   </g> </svg>
                          {% comment %} new code {% endcomment %}
                          <svg class="icon icon-fly" data-name="Layer 2" viewBox="0 0 311.13 316.39">   <g data-name="Layer 2">     <path d="M304.27,1.97c-4.3-2.54-9.48-2.63-13.86-.23L7.16,164.15c-4.77,2.67-7.5,7.7-7.13,13.16,.36,5.38,3.64,9.94,8.6,11.99l110.07,49.16,4.93,2.21v61.71c0,5.71,3.41,10.79,8.69,12.96,1.73,.71,3.54,1.05,5.33,1.05,3.67,0,7.26-1.45,9.95-4.19l41.58-42.25,76.72,34.27,.45,.19c1.64,.64,3.36,.95,5.07,.95,2.79,0,5.54-.83,7.91-2.44,3.65-2.5,5.9-6.56,6.08-10.96L311.08,14.94l.05-.92c0-5-2.57-9.5-6.86-12.05Zm-100.11,252.76l-54.57-24.37L288.4,42.99l-22.19,239.46-62.05-27.72Zm-60.53,33v-38.13l26.06,11.64-26.06,26.49ZM266.9,38.26L130.32,221.75,27.22,175.7,266.9,38.26Z"></path>   </g> </svg>
                        {% else %}
                          {{ button_text }}
                        {% endif %}
                      {% if settings.enable_button_1_border_outside %}</span>{% endif %}</button>
                  </div>
                  {%- if form.errors -%}
                    <div class="newsletter-form__message newsletter-form__message--error form__message" id="ContactFooter-error">
                      {% render 'icon-error' -%}
                      {{- form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}
                    </div>
                  {%- endif -%}
                  {%- if form.posted_successfully? -%}
                    <script>
                      $(document).ready(function () {
                        var newsletterSuccessPopup = (function () {
                          var popup = $('.newsletter-success-modal');
                          var close = popup.find('.close');
                          var success = popup.find('.success');
                          var error = popup.find('.error');
                          var overlay = $('.background-overlay');
                          popup.show();
                          overlay.show();
                          error.hide();
                          success.show();
                          $.cookie('emailSubcribeModal', 'closed', {
                            expires: 1,
                            path: '/',
                          });
                          close.off('click').on('click', function () {
                            popup.fadeOut();
                            overlay.hide();
                          });
                          overlay.off('click').on('click', function () {
                            popup.fadeOut();
                            overlay.hide();
                          });
                        })();
                        var newURL = location.href.split('?')[0];
                        window.history.pushState('object', document.title, newURL);
                      });
                    </script>
                  {% else %}
                    <script>
                      $(document).ready(function () {
                        if (window.location.href.indexOf('newsletter&form_type=customer') > -1) {
                          var newsletterSuccessPopup = (function () {
                            var popup = $('.newsletter-success-modal');
                            var close = popup.find('.close');
                            var success = popup.find('.success');
                            var error = popup.find('.error');
                            var overlay = $('.background-overlay');
                            popup.show();
                            overlay.show();
                            error.show();
                            success.hide();
                            $.cookie('emailSubcribeModal', 'closed', {
                              expires: 1,
                              path: '/',
                            });
                            close.off('click').on('click', function () {
                              popup.fadeOut();
                              overlay.hide();
                            });
                            overlay.off('click').on('click', function () {
                              popup.fadeOut();
                              overlay.hide();
                            });
                          })();
                          var newURL = location.href.split('?')[0];
                          window.history.pushState('object', document.title, newURL);
                        }
                      });
                    </script>
                  {%- endif -%}
                {%- endform -%}
              </newsletter-form>
            </div>
            {% if block.settings.custom_width and block.settings.newsletter_content_direction == 'column' %} 
              </div>
            {% endif %}
          </div>
          {%- elsif block.type == 'banner' -%}
          {%- liquid
              assign banner_title = block.settings.banner_title
              assign banner_button = block.settings.banner_button
              assign banner_link = block.settings.banner_link
              assign preview_img = block.settings.banner_image
              assign title_margin_top = block.settings.title_margin_top
              assign title_margin_bottom = block.settings.title_margin_bottom
              assign banner_mg_left = block.settings.banner_mg_left
              assign banner_mg_right = block.settings.banner_mg_right
              assign width_mb = block.settings.width_mb
              assign actual_image_size = block.settings.actual_image_size
          -%}
          <div class="section-banner{% if actual_image_size %} actual_image_size{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}{% if block.settings.image_behavior != 'none' %} animate--{{ block.settings.image_behavior }} o-hidden{% endif %}" style="--title_margin_top: {{ title_margin_top }}px;--title_margin_bottom: {{ title_margin_bottom }}px;--banner_mg_left: {{ banner_mg_left }}px;--banner_mg_right: {{ banner_mg_right }}px;{% if width_mb != blank %}--max-width-mb: {{ width_mb }}%;{% endif %}">
            {%- if preview_img != blank -%}
              <a {% if banner_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ banner_link }}"{% endif %} class="image adaptive_height image-zoom" style="padding-top: {% unless preview_img.presentation.focal_point == '50.0% 50.0%' %}{{ 1 | divided_by: preview_img.aspect_ratio | times: 120 | append: '%' }}{% else %}{{ 1 | divided_by: preview_img.aspect_ratio | times: 100 | append: '%' }}{% endunless %}" title="{{ block.settings.banner_title | default: shop.name | escape  }}">
                {% if actual_image_size %}
                  <img src="{{ preview_img | img_url: 'master' }}" alt="{{ preview_img.alt | default }}"/>
                {% else %}
                  <img {% render 'lazyload',preview_img: preview_img %}{% unless preview_img.presentation.focal_point == '50.0% 50.0%' %} style="object-position: {{ preview_img.presentation.focal_point }}"{% endunless %} />
                {% endif %}
              </a>
            {%- endif -%}
            {%- if block.settings.banner_title != blank -%}
              <h2 {% if settings.banner_animation == 'effect_fade_up' %}class="scroll-trigger animate--slide-in"{% endif %} style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 2;{% endif %}--title-fontsize-style: {{ block.settings.banner_fontsize_title | append: 'px' }};--title-mb-fontsize-style: {{ block.settings.banner_fontsize_title_mb | append: 'px' }};--title-tb-fontsize-style: {% if block.settings.banner_fontsize_title > 50 %} {{ block.settings.banner_fontsize_title_mb | append: 'px' }}{% else %} {{ block.settings.banner_fontsize_title | append: 'px' }}{% endif %};--title-color-style: {{ block.settings.banner_color_title }}">{{ block.settings.banner_title | escape }}</h2>
            {%- endif -%}
            {%- if block.settings.banner_button != blank -%}
              {% if settings.banner_animation == 'effect_fade_up' %}
              <div class="scroll-trigger animate--slide-in" style="--animation-order: 3;">
              {% endif %}
                <a class="button"{% if block.settings.banner_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.banner_link }}"{% endif %} title="{{ block.settings.banner_button }}" style="--button-fontsize-style: {{ block.settings.banner_fontsize_button | append: 'px' }};--button-color-style: {{ block.settings.banner_color_button }}"><span>{{ block.settings.banner_button }}</span></a>
              {% if settings.banner_animation == 'effect_fade_up' %}
              </div>
              {% endif %}
            {%- endif -%}
          </div>
        {%- elsif block.type == 'social_media' -%}
          {% render 'footer-social', block: block, text_align: text_align %}
        {%- endif -%}
      {%- endfor -%}
    </animate-element>
  </div>
</div>
<script>
  class AnimateElement extends HTMLElement {
    constructor() {
      super();
    }
  
    connectedCallback() {
      this.init();
    }
  
    init() {
      const observer = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
