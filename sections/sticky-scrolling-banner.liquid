<div class="halo-block halo-banner image-banner sticky-scrolling-banner" id="halo-image-banner-{{ section.id }}"
    style="--mg_top_desktop: {{ mg_top_desktop | append: 'px' }};--mg_top_tablet:{{ mg_top_tablet | append: 'px' }};--mg_top_mobile: {{ mg_top_mobile | append: 'px' }};--mg_bottom_desktop:{{ mg_bottom_desktop | append: 'px' }};--mg_bottom_tablet:{{ mg_bottom_tablet | append: 'px' }};--mg_bottom_mobile:{{ mg_bottom_mobile | append: 'px' }};--padding_full_width:{{ padding_full_width | append: 'px' }};" allow-transparent-header
>
    <div class="container-full">
        <div class="halo-block-content" data-product-block data-limit="{{ limit }}" data-collection="{{ collection }}" data-image-ratio="{{ image_ratio }}" data-layout="grid" sectionId="{{ section.id }}">
            <div class="halo-banner-wrapper">
                <div class="img-box img-box--mobile">
                    {%- if image != blank -%}
                        <a class="image image-adapt"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %} style="padding-top: 100vh;">
                            {%- assign height_dsk = image.width | divided_by: image.aspect_ratio | round -%}
                            {{ image | image_url: width: 3840 | image_tag: loading: 'lazy', class: lazy, height: height_dsk, sizes: "100vw", widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840' }}
                            {%- if settings.enable_lazyload -%}<span class="data-lazy-loading"></span>{%- endif -%}
                        </a>
                    {%- else -%}
                        <a class="image" title="{{ shop.name }}"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %}>
                            <div class="placeholder" style="--height_placeholder: 100vh;">
                                {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                            </div>
                        </a>
                    {%- endif -%}
                    {%- if mobile_image != blank -%}
                        <a class="image image-mobile image-adapt adaptive_height"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %} {% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %} style="padding-top: 100vh;">
                            {%- assign height_mb = mobile_image.width | divided_by: mobile_image.aspect_ratio | round -%}
                            {{ mobile_image | image_url: width: 750 | image_tag: loading: 'lazy',class: lazy, height: height_mb, sizes: "100vw", widths: '375, 550, 750'}}
                            {%- if settings.enable_lazyload -%}<span class="data-lazy-loading"></span>{%- endif -%}
                        </a>
                    {%- else -%}
                        {%- if image != blank -%}
                            <a class="image image-mobile image-adapt adaptive_height"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %} style="padding-top: 100vh;">
                            {%- assign height_mb = image.width | divided_by: image.aspect_ratio | round -%}
                            {{ image | image_url: width: 750 | image_tag: loading: 'lazy', class: lazy, height: height_mb, sizes: "100vw", widths: '375, 550, 750' }}
                            {%- if settings.enable_lazyload -%}<span class="data-lazy-loading"></span>{%- endif -%}
                            </a>
                        {%- else -%}
                            <a class="image image-mobile" title="{{ shop.name }}"{% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %}>
                                <div class="placeholder" style="--height_placeholder: 100vh;">
                                    {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                                </div>
                            </a>
                        {%- endif -%}
                    {%- endif -%}
                </div>
                {%- if heading != blank or text != blank or btn_text != blank -%}
                    <div class="content-box text-{{ align }}">
                        <div class="content-info">
                            {%- if heading != blank -%}
                                <h3 class="banner-heading{% if enable_style_italic %} ft-i{% endif %}{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" 
                                    style="
                                        {% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 1;{% endif %}
                                        --heading_font_size: {{ font_size_heading | append: "px"}};
                                        --heading_font_size_mb: {{ font_size_heading_mb | append: 'px' }};
                                        --heading_color: {{ color_heading }}; 
                                        --heading_color_mb: {{ color_heading_mb }};
                                        --heading_font_weight: {{ font_weight_heading }};
                                        --letter_spacing_heading: {% if letter_spacing_heading != blank %}{{ letter_spacing_heading }}{% else %}var(--heading-letter-spacing){% endif %};
                                        --heading_line_height: {{ line_height_heading | append: 'px' }};
                                        --heading_line_height_mb: {{ line_height_heading_mb | append: 'px' }};
                                        --margin_bottom_heading:{{margin_bottom_heading | append: 'px'}};
                                        --margin_bottom_heading_mb:{{margin_bottom_heading_mb | append: 'px'}}"
                                >{{ heading }}</h3>
                            {%- endif -%}
                            {%- if text != blank -%}
                                <span class="banner-text{% if settings.banner_animation == 'effect_fade_up' %} scroll-trigger animate--slide-in{% endif %}" 
                                    style="{% if settings.banner_animation == 'effect_fade_up' %}--animation-order: 2;{% endif %}
                                        --des_font_size: {{ font_size_des | append: 'px'}};
                                        --des_font_size_mb: {{ font_size_des_mb | append: 'px'}};
                                        --des_color: {{ color_des }};
                                        --des_color_mb: {{ color_des_mb }};
                                        --line_height_des: {{ line_height_des | append: 'px'}};
                                        --line_height_des_mb: {{ line_height_des_mb | append: 'px'}};
                                        --margin_bottom_des: {{ margin_bottom_des | append: 'px'}};
                                        --margin_bottom_des_mb:{{ margin_bottom_des_mb | append: 'px'}}"
                                >{{ text }}</span>
                            {%- endif -%}
                            {%- if btn_text != blank -%}
                                {% if settings.banner_animation == 'effect_fade_up' %}
                                <div class="scroll-trigger animate--slide-in" style="--animation-order: 3;">
                                {% endif %}
                                    <a {% if link == blank %} role="link" aria-disabled="true"{% else %} href="{{ link }}"{% endif %} class="banner-button button{% if settings.banner_animation == 'effect_fade_up' %} effect_fade_up{% endif %}" 
                                        style="--button_color: {{ button_color }};
                                            --button_bg: {% if button_background_gradient != blank %}{{ button_background_gradient }}{% else %}{{ button_background}}{% endif %};
                                            --button_border: {{ button_border }};
                                            --button_width: {{ button_width | append: 'px' }};
                                            --button_color_hover: {{ button_color_hover }};
                                            --button_bg_hover: {% if button_background_gradient_hover != blank %}{{ button_background_gradient_hover }}{% else %}{{ button_background_hover}}{% endif %};
                                            --button_border_hover: {{ button_border_hover}}">
                                        <span>{{ btn_text | escape }}</span>
                                    </a>
                                {% if settings.banner_animation == 'effect_fade_up' %}
                                </div>
                                {% endif %}
                            {%- endif -%}
                        </div>
                        <div class="content-product{% if enable_layout_special %} layout-special{% endif %}">
                            <div class="products-grid column-1">
                                {%- if collection.products[0] != nil -%}
                                    {%- for product in collection.products limit: limit -%}
                                        <div class="product{% if swipe == 'true' %} slider__slide grid__item{% endif %}">
                                            {% render 'product-card-loading', product_card_product: product, media_size: image_ratio, portrait_aspect_ratio: '133' %}
                                        </div>
                                    {%- endfor -%}
                                {%- else -%}
                                    {%- for product in (1..limit) -%}
                                        <div class="product{% if swipe %} slider__slide grid__item{% endif %}">
                                            {% capture current %}{% cycle 1, 2, 3, 4 %}{% endcapture %}
                                            {% render 'product-card-placeholder', index: current %}
                                        </div>
                                    {%- endfor -%}
                                {%- endif -%}
                            </div>
                        </div>
                    </div>
                {%- endif -%}
            </div>
        </div>
    </div>
</div>

<script>
    reOrder();
    $(window).scroll(reOrder)
    $(window).resize(reOrder)

    function reOrder() {
        var section = $('#halo-image-banner-{{ section.id }}');

        var scroll = $(window).scrollTop(),
        topContent = section.find('.halo-banner-wrapper').offset().top,
        sectionHeight = section.find('.content-box').outerHeight(),
        bottomContent = topContent + sectionHeight;

        if (scroll + window.innerHeight > topContent && scroll < bottomContent) {
            section.find('.halo-banner-wrapper').removeClass('posAbs').addClass('posFix');
        } else if (scroll > bottomContent) {
            section.find('.halo-banner-wrapper').removeClass('posFix').addClass('posAbs');
        } else if (scroll + window.innerHeight < topContent) {
            section.find('.halo-banner-wrapper').removeClass('posFix');
        }
    }
</script>

